# Database Settings
# Central Config Database (MongoDB)
CONFIG_DB_HOST=localhost
CONFIG_DB_PORT=27017
CONFIG_DB_USER=config_user
CONFIG_DB_PASSWORD=config_password
CONFIG_DB_NAME=config_db

# Tenant Database (PostgreSQL)
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_SUPERUSER=postgres
TENANT_DB_SUPERPASS=changeme

# Plugin Settings
ENABLE_HOT_RELOAD=true
PLUGIN_DIR=plugins

# Management System Repository Service
SYSTEM_REPO_URL=http://management-system-repo:8080
SYSTEM_REPO_API_KEY=dev_api_key

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json 